doctype html
//- basic libraries: jquery(1.10.2), d3js(3.5.4), angularjs(1.2.3), bootstrap(3.0)/semantic-ui(0.9.3/0.9.5)
//-                  fontawesome(4.4.0), reactjs(0.14.0)
- var use = { cdn: true, og: true, favicon: true }
- var lib = { jquery: true, d3js: false, angular: true, bootstrap: true, semantic: false, fontawesome: true, reactjs: false }
- var assets = "assets"
- var favicon = "thumbnail.png"
- var title = "D3 Module Picker"
- var og = {}
- og.title = title
- og.twitter = {type: "summary_large_image", site: "@plotdb", creator: "@zbryikt"}
- og.domain = "plotdb.github.io"
- og.url = ""
- og.thumbnail = {width: 837, height: 401, type: "image/png"}
- og.thumbnail.url = "thumbnail.png"
- og.author = "plotdb"
- og.section = "Taiwan"
- og.keyword = "plotdb,d3"
- og.description = "Frustrated about too many modules? Let D3 Module Picker help!"
html(lang="en")
  head(prefix="og: http://ogp.me/ns#")
    meta(charset="utf-8")
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    // libraries
    include library.jade
    // custom files
    link(rel="stylesheet",type="text/css",href="index.css")
    link(rel="stylesheet",type="text/css",href="lib/select2/4.0.1/css/select2.min.css")
    script(type="text/javascript",src="assets/bluebird/3.4.1/bluebird.min.js")
    script(type="text/javascript",src="index.js")
    script(type="text/javascript",src="lib/select2/4.0.1/js/select2.min.js")
  body(ng-app="d3-module-picker",ng-controller="d3-module-picker")
    #root
      h2 D3 4.0 Module Picker
      p Wanna make your own bundle of d3 module collection?
      hr
      .input-group
        select#module-selector(multiple="multiple",ngselect2,ng-data="modules")
          include d3module.jade
        span.input-group-btn(ng-click="makeBundle()")
          .btn.btn-default Make Bundle
      hr
      .text-right
        img(src="loading.gif",ng-show="loading",style="height:32px;")
        a(ng-show="!loading && bundleURL",ng-attr-href="{{bundleURL}}",download="bundle.js") Download Bundle
      hr
      p Here is your html code:
      .row
        .col-sm-4
          textarea#output.form-control(ng-model="output.html",rows="8")
        .col-sm-4
          textarea#output.form-control(ng-model="output.jade",rows="8")
        .col-sm-4
          textarea#output.form-control(ng-model="output.npm",rows="8")
    hr
    #footer
      a(href="http://d3js.org") http://d3js.org
      span  | 
      a(href="https://github.com/d3/d3/blob/master/CHANGES.md") D3 4.0 Release Note
      .pull-right
        a(href="https://github.com/plotdb/d3-module-picker") Repo
        span  | MIT License

